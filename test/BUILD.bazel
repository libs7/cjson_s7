load("//config/cc:BUILD.bzl",
     "BASE_SRCS", "BASE_DEPS", "BASE_INCLUDE_PATHS",
     "BASE_COPTS", "BASE_DEFINES", "BASE_LINKOPTS")

SRCS          = BASE_SRCS + ["macros.h", "//src:trace_dev.h"]
DEPS          = BASE_DEPS + [
    "@s7_tools//src:s7plugin_test_config",
    "@gopt//src:gopt",
    "@unity//src:unity",
    "@uthash//src:uthash",
]
INCLUDE_PATHS = BASE_INCLUDE_PATHS + [
    "-Isrc",
    "-I$(@gopt)/src",
    "-I$(@unity)/src",
    "-I$(@uthash)/src",
    "-I$(GENDIR)/$(@s7_tools)/src",
]
COPTS         = BASE_COPTS + INCLUDE_PATHS + [
    # macos only?
    "-Wno-gnu-statement-expression" # TRACE_S7_DUMP macro
]
DEFINES       = BASE_DEFINES
LINKOPTS      = BASE_LINKOPTS
TOOLCHAINS = ["//:test_repo_paths"]
TIMEOUT = "short"
TAGS = ["json"]

