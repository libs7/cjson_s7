load("@rules_cc//cc:defs.bzl", "cc_test")

load("//:BUILD.bzl",
     "BASE_SRCS", "BASE_DEPS", "BASE_INCLUDE_PATHS",
     "BASE_COPTS", "BASE_DEFINES", "BASE_LINKOPTS",
     "GOPT_VERSION",
     "UNITY_VERSION",
     "UTHASH_VERSION")

SRCS          = BASE_SRCS + [
    "common.c", "common.h",
    "@libs7//src:libs7.h"
]

DEPS          = BASE_DEPS + [
    "@gopt//:gopt",
    "@unity//src:unity",
    "@uthash//src:uthash",
]
INCLUDE_PATHS = BASE_INCLUDE_PATHS + [
    "-Isrc",
    "-Iexternal/gopt~{}/src".format(GOPT_VERSION),
    "-Iexternal/unity~{}/src".format(UNITY_VERSION),
    "-Iexternal/uthash~{}/src".format(UTHASH_VERSION)
]
COPTS         = BASE_COPTS + INCLUDE_PATHS
DEFINES       = BASE_DEFINES
LINKOPTS      = BASE_LINKOPTS

TIMEOUT = "short"

TAGS = ["json"]

################################################################
test_suite(
    name  = "test",
    tests = [
        ":array_to_scm_test",
        # ":array_to_scm_dso_static_test",
        ":arrays_test",
        ":readers_test",
        ":map_to_scm_test",
        ":maps_test",
        # ":strings",
    ]
)

################################################################
cc_test(
    name = "array_to_scm_test",
    linkstatic = True,
    srcs = SRCS + ["json_array_to_scm_test.c"],
    local_defines = DEFINES,
    deps = DEPS + ["//src:cjson_s7"],
    copts = COPTS,
    linkopts = LINKOPTS,
    timeout = TIMEOUT,
    tags = TAGS + ["arrays", "conversion"]
)

cc_test(
    name = "array_to_scm_dso_static_test",
    linkstatic = True,
    srcs = SRCS + [
        "json_array_to_scm_test.c",
    ],
    data = ["//src:cjson_s7_dso"],
    local_defines = DEFINES,
    deps = DEPS,
    copts = COPTS,
    linkopts = LINKOPTS,
    timeout = TIMEOUT,
    tags = TAGS + ["arrays", "conversion"]
)

cc_test(
    name = "arrays_test",
    linkstatic = True,
    srcs = SRCS + ["json_arrays_test.c"],
    local_defines = DEFINES,
    deps = DEPS + ["@cjson_s7//src:cjson_s7"],
    copts = COPTS,
    linkopts = LINKOPTS,
    timeout = TIMEOUT,
    tags = TAGS + ["arrays"]
)

cc_test(
    name = "map_to_scm_test",
    linkstatic = True,
    srcs = SRCS + ["json_map_to_scm_test.c"],
    local_defines = DEFINES,
    deps = DEPS + ["@cjson_s7//src:cjson_s7"],
    copts = COPTS,
    linkopts = LINKOPTS,
    timeout = TIMEOUT,
    tags = TAGS + ["maps", "conversion"]
)

cc_test(
    name = "maps_test",
    linkstatic = True,
    srcs = SRCS + ["json_maps_test.c"],
    local_defines = DEFINES,
    deps = DEPS + ["//src:cjson_s7"],
    copts = COPTS,
    linkopts = LINKOPTS,
    timeout = TIMEOUT,
    tags = TAGS + ["maps"]
)

cc_test(
    name = "readers_test",
    linkstatic = True,
    srcs = SRCS + ["json_readers_test.c"],
    local_defines = DEFINES,
    deps = DEPS + ["//src:cjson_s7"],
    data = ["//test/data:json"],
    copts = COPTS,
    linkopts = LINKOPTS,
    timeout = TIMEOUT,
    tags = TAGS + ["readers"]
)

