    name  = "test",
    tests = [
        ":array_to_scm_test",
        # ":array_to_scm_dso_static_test",
        ":arrays_test",
        ":readers_test",
        ":map_to_scm_test",
        ":maps_test",
        # ":strings",
    ]
)

